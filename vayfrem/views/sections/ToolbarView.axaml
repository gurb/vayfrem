<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="vayfrem.ToolbarView">
	<UserControl.Styles>
		<Style Selector = "Button.Selected">
			<!--<Setter Property = "Foreground" Value = "# FFFFFFFF" />-->
			<!--<Setter Property = "BorderThickness" Value = "2" />-->
			<Setter Property="Background" Value = "#888" />
			<!--<Setter Property = "BorderBrush" Value = "# FFFFFFFF" />-->
		</Style>
	</UserControl.Styles>
	
	
	<StackPanel Orientation="Vertical">
		<Button x:Name="SelectTool" Margin="5" Padding="10">
			<Image Source="avares://vayfrem/assets/cursor.png" Width="25" Height="25">
			</Image>
		</Button>
		<Button x:Name="RectTool" Classes="Selected" Margin="5" Padding="10">
			<Image Source="avares://vayfrem/assets/rect.png" Width="25" Height="25">
			</Image>
		</Button>
		<Button x:Name="TextTool" Margin="5" Padding="10">
			<Image Source="avares://vayfrem/assets/text.png" Width="25" Height="25">
			</Image>
		</Button>
		<Button x:Name="QuadraticBCTool" Margin="5" Padding="10">
			<Image Source="avares://vayfrem/assets/qbc.png" Width="25" Height="25">
			</Image>
		</Button>
	</StackPanel>
</UserControl>
