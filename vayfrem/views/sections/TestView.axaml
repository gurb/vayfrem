<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="vayfrem.views.sections.TestView">
	
		<Grid HorizontalAlignment="Stretch" RowDefinitions="50, 50, 50, 50" ColumnDefinitions="5, *, 5, *, 5, *">
			<TextBlock Grid.Row="0" Grid.Column="1" x:Name="HostInformation" Height="25"></TextBlock>
			<Button Grid.Row="0" x:Name="ActivateButton" Grid.Column="3">Activate Host</Button>
			<TextBox Grid.Row="1" x:Name="IpTxt" Grid.Column="1" Height="25"></TextBox>
			<TextBox Grid.Row="1" x:Name="PortTxt" Grid.Column="3" Height="25"></TextBox>
			<TextBox Grid.Row="2" x:Name="Password" Grid.Column="1" Height="25"></TextBox>
			<Button Grid.Row="2" Grid.Column="3" x:Name="ConnectButton">Connect</Button>
			<TextBlock Grid.Row="3" Grid.Column="1">Connection Status : </TextBlock>
			<TextBlock Grid.Row="3" Grid.Column="3" x:Name="ConnectionStatus"></TextBlock>
		</Grid>
	<!--<Canvas Width="200" Height="200" Background="AntiqueWhite">
	</Canvas>-->
</UserControl>
