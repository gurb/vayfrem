<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:draftio.views.components">
  <Design.PreviewWith>
    <controls:TabButtonControl />
  </Design.PreviewWith>

  <Style Selector="controls|TabButtonControl">
    <!-- Set Defaults -->
	  <Setter Property="Background" Value="{DynamicResource MainColor}" ></Setter> 
	  
	  
    <Setter Property="Template">
      <ControlTemplate>
        <TextBlock Background="{TemplateBinding Background}" Text="{TemplateBinding Title}" />
      </ControlTemplate>
    </Setter>
  </Style>
</Styles>
