<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:draftio.viewmodels"
             x:DataType="vm:ProjectTreeViewModel"
			 x:CompileBindings="True"
             x:Class="draftio.views.sections.ProjectTreeView">
	<Grid RowDefinitions="20, *, 20">
		<StackPanel Grid.Row="0" Background="Gray"></StackPanel>
		<ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Visible">
			<StackPanel HorizontalAlignment="Stretch" Orientation="Vertical">
				<Canvas x:Name="ProjectMenu" Height="10" Background="Blue"></Canvas>
			</StackPanel>
		</ScrollViewer>
		<StackPanel Grid.Row="2" Background="Gray">
			<Button Width="50" Padding="0" x:Name="AddButton" HorizontalContentAlignment="Center">+</Button>
		</StackPanel>
	</Grid>
	<!--<TreeView ItemsSource="{Binding Nodes}">
		<TreeView.ItemTemplate>
			<TreeDataTemplate ItemsSource="{Binding Children}">
				<TextBlock Text="{Binding Name}"/>
			</TreeDataTemplate>
		</TreeView.ItemTemplate>
	</TreeView>-->
</UserControl>
